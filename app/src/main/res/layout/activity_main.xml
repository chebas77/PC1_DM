<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Primer número de entrada -->
    <EditText
        android:id="@+id/numero1EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese primer número"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Segundo número de entrada -->
    <EditText
        android:id="@+id/numero2EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese segundo número"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/numero1EditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Tercer número de entrada -->
    <EditText
        android:id="@+id/numero3EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese tercer número"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/numero2EditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón para calcular el número mayor -->
    <Button
        android:id="@+id/calcularButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Mayor"
        app:layout_constraintTop_toBottomOf="@id/numero3EditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Texto para mostrar el resultado -->
    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado aquí"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/calcularButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón para ir a la otra actividad -->
    <Button
        android:id="@+id/irAEjercicio02Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a Ejercicio 02"
        app:layout_constraintTop_toBottomOf="@id/resultadoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón para ir a Ejercicio 01 -->
    <Button
        android:id="@+id/irAEjercicio01Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a Ejercicio 01"
        app:layout_constraintTop_toBottomOf="@id/irAEjercicio02Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
